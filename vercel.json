{
  "version": 2,
  "framework": "nextjs",
  "outputDirectory": "nextjs/.next",
  "buildCommand": "cd nextjs && npm install && npm run build",
  "installCommand": "cd nextjs && npm install",
  "devCommand": "cd nextjs && npm run dev",
  "regions": ["hkg1"],
  "public": true,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./nextjs/"
}